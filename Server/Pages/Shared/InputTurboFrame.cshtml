@model InputTurboFrame

<details class="bg-white grow shadow-md rounded-lg group/output">
    <summary class="p-4 cursor-pointer flex justify-between items-center rounded-lg">
        <h3 class="font-semibold">@(Model.Input.Name ?? "Naamloos")</h3>
        <svg class="w-5 h-5 transition-transform duration-200 group-open/output:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
    </summary>
    <div class="p-4 flex-col flex gap-4">
        <div class="flex gap-2">
            @foreach (var c in @Model.Input.Files)
            {
                <div class="w-32 h-32 overflow-hidden">
                    <a href="/images/@Model.Input.Id/@c.Index" target="_blank">
                        <img src="/images/@Model.Input.Id/@c.Index" alt="Your image description" class="w-full h-full object-cover">
                    </a>
                </div>
            }
        </div>
        
        <div class="flex justify-between">
            <div>
                @await Html.RenderTurboFrameAsync(Model.Input.TagsViewData(Model.AllTags))
            </div>
            <a href="/api/input/@Model.Input.Id" data-turbo-method="delete" class="@Buttons.Attrs @Buttons.RedAttrs">
                Delete Entire Input
            </a>
        </div>
    
        @foreach (var output in Model.Input.Outputs)
        {
            @await Html.RenderTurboFrameAsync(new OutputTurboFrame(output));
        }
        
    </div>
    

</details>