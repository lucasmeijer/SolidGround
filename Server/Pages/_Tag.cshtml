@model (Tag tag, Input input)

<turbo-frame id="@TurboFrameId.ForTagInsideInput(Model.input, Model.tag)">
    <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded flex items-center">
        @Model.tag.Name
        <a href="/remove-tag?input=@Model.input.Id&tag=@Model.tag.Id" class="ml-1 text-red-500 hover:text-red-700" data-turbo-confirm="remove @Model.tag.Name?">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
        </a>
    </span>
</turbo-frame>